@model IEnumerable<LinkShortening.Models.ShortUrl>

@{
    ViewData["Title"] = "URL Shortener";
}

<h1>URL Shortener</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Original URL</th>
            <th>Short URL</th>
            <th>Created Date</th>
            <th>Click Count</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@item.OriginalUrl" target="_blank">@item.OriginalUrl</a>
                </td>
                <td>
                    <a href="@Url.Action("RedirectShortUrl", "Home", new { shortUrl = item.ShortCode }, Context.Request.Scheme)" target="_blank">
                        @Url.Action("RedirectShortUrl", "Home", new { shortUrl = item.ShortCode }, Context.Request.Scheme)
                    </a>
                </td>
                <td>
                    @item.CreateDate.ToLocalTime().ToString("g")
                </td>
                <td>
                    @item.ClickCount
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>