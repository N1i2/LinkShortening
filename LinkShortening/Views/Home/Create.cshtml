@model string

@{
    ViewData["Title"] = "Create Short URL";
}

<h1>Create Short URL</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="OriginalUrl" class="control-label">Original URL</label>
                <input name="OriginalUrl" class="form-control" value="@Model" />
                <span class="text-danger" data-valmsg-for="OriginalUrl" data-valmsg-replace="true"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}